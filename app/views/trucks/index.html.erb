<p id="notice"><%= notice %></p>

<h1>Trucks</h1>
<%= turbo_frame_tag :trucks do %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Company</th>
        <th>Type</th>
        <th>Year</th>
        <th>Capacity</th>
        <th>Reserved</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @trucks.each do |truck| %>
        <tr>
          <td><%= truck.name %></td>
          <td><%= truck.company.name %></td>
          <td><%= truck.type %></td>
          <td><%= truck.year %></td>
          <td><%= truck.capacity %></td>
          <td><%= truck.reserved? ? '✅' : '' %></td>
          <td><%= link_to 'Show', truck %></td>
          <% if can? :reserve, truck %>
            <td><%= link_to truck.reserved? ? '❌ Unreserve' : '✅ Reserve', reserve_truck_path(truck), method: :put %></td>
          <% end %>
          <% if can? :manage, truck %>
          <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
          <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>
<% if can? :create, Truck %>
<%= link_to 'New Truck', new_truck_path %>
<% end %>
