<%= semantic_form_for @user do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :company, as: :select, collection: Company.all %>
    <%= f.input :email %>
    <%= f.input :password %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, label: 'Register', button_html: { class: 'btn btn-primary' } %>
  <% end %>
<% end %>
