<%= semantic_form_for @truck do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :company %>
    <%= f.input :type %>
    <%= f.input :year %>
    <%= f.input :capacity %>
    <%= f.input :reserved %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
